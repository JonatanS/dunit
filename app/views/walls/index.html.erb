<p id="notice"><%= notice %></p>

<h1>Listing Walls</h1>

<table>
  <thead>
    <tr>
      <th>Revit</th>
      <th>Done</th>
      <th>Details</th>
      <th>Type</th>
      <th>Height</th>
      <th>Thickness</th>
      <th>Material</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @walls.each do |wall| %>
      <tr>
        <td><%= wall.revit_id %></td>
        <td><%= wall.done %></td>
        <td><%= wall.details %></td>
        <td><%= wall.type %></td>
        <td><%= wall.height %></td>
        <td><%= wall.thickness %></td>
        <td><%= wall.material %></td>
        <td><%= link_to 'Show', wall %></td>
        <td><%= link_to 'Edit', edit_wall_path(wall) %></td>
        <td><%= link_to 'Destroy', wall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

