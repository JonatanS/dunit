<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :project_id %><br>
    <%= f.select :project_id, options_from_collection_for_select(Project.all, :id, :name) %>
  </div>
  
  <div class="field">
    <%= f.label :user_id, 'You can invite an existing dunit user:' %><br>
    <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :name), :include_blank => true %>
  </div>
  Or you can invite someone new:
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="actions">
    <%= f.submit "Invite" %>
  </div>
<% end %>
