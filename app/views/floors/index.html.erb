<p id="notice"><%= notice %></p>

<h1>Listing Floors</h1>

<table>
  <thead>
    <tr>
      <th>Revit</th>
      <th>Done</th>
      <th>Details</th>
      <th>Level name</th>
      <th>Material</th>
      <th>Thickness</th>
      <th>Floor type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @floors.each do |floor| %>
      <tr>
        <td><%= floor.revit_id %></td>
        <td><%= floor.done %></td>
        <td><%= floor.details %></td>
        <td><%= floor.level_name %></td>
        <td><%= floor.material %></td>
        <td><%= floor.thickness %></td>
        <td><%= floor.floor_type %></td>
        <td><%= link_to 'Show', floor %></td>
        <td><%= link_to 'Edit', edit_floor_path(floor) %></td>
        <td><%= link_to 'Destroy', floor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

